h1 New Campaign
= form_for @campaign do |f|
  = f.hidden_field :owner_id, value: current_user.id
  = f.label :name
  = f.text_field :name
  = f.label :tag_list, "Tags (comma separated)"
  = f.text_field :tag_list
  = f.label :campaign_text
  = f.text_area :campaign_text, class: 'tinymce'
  = tinymce
  = f.submit