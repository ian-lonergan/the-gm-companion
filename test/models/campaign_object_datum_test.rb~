require 'test_helper'

Class CampaignObjectDatumTest < ActiveSupport::TestCase
  
  test 'should not save without a name' do
    campaign_object_datum = campaign_object_data(:jowan)
    campaign_object_datum.name = ''
    assert !campaign_object_datum.valid?, 'Saves without a name'
    assert_equal 'Please enter a name', campaign_object_datum.errors[:name].first, 'Will not save without a name.'
  end
  
  test 'should not save without an abstract' do
    campaign_object_datum = campaign_object_data(:anya)
    campaign_object_datum.abstract = ''
    assert !campaign_object_datum.valid?, 'Saves without an abstract'
    assert_equal 'Please enter an abstract', campaign_object_datum.errors[:abstract].first, 'Will not save without an abstract.'
  end
  
end
